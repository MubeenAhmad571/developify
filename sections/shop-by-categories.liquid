{{ 'shop-by-categories.css' | asset_url }}

<div class="feature-collection-container">
  <div class="feature-collection-wrapper">
    <div class="feature-collection-heading">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="swiper feature-collection-slider">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings.slide_url != blank %}
            <a href="{{ block.settings.slide_url }}" class="feature-collection-slide swiper-slide">
          {% else %}
            <div class="feature-collection-slide swiper-slide">
          {% endif %}
          <div class="feature-collection-slide__media">
            <img
              src="{{ block.settings.slide_img | image_url: width: '136' }}"
              loading="lazy"
              alt="{{ block.settings.slide_img.alt }}"
              width="{{ block.settings.slide_img.width }}"
              height="{{ block.settings.slide_img.height }}"
            >
          </div>
          <h4>{{ block.settings.slide_txt }}</h4>
          {% if block.settings.slide_url != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</div>

<!-- Initialize Swiper -->
<script src="{{ 'shop-by-categories.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Shop by Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_img",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "slide_txt",
          "label": "Slide Text"
        },
        {
          "type": "url",
          "id": "slide_url",
          "label": "Slide URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Categories"
    }
  ]
}
{% endschema %}
